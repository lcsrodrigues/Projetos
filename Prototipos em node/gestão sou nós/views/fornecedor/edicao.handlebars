<link rel="stylesheet" type=" text/css" href="/css/fornecedores.css">

<div class="container2">
    <form class="form_cad" action="/fornecedor/editar/{{fornecedor.id}}" method="POST">
        <input name="Nome" type="text" placeholder="Fornecedor" value="{{fornecedor.nome}}">
        <input name="AreaAtuacao" type="text" placeholder="Area de atuação" value="{{fornecedor.area_atuacao}}">
        <textarea name="Observacoes" rows="10" cols="30" placeholder="Observações">{{fornecedor.observacao}}</textarea>
        <div class="btn_form">                
            <input type="button" value="Cancelar" onclick="window.history.back()"/>
            <input type="submit" value="Salvar" id="btnSalvar"/>
        </div>
    </form>
</div>