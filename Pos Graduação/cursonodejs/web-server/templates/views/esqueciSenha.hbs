<html>
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" type="text/css" href="/css/layout.css" />
        <link rel="stylesheet" type="text/css" href="/css/esqueciSenha.css" />
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.js"></script>
        <script type="text/javascript" src="/js/util.js"></script>
        <script type="text/javascript" src="/js/esqueciSenha.js"></script>
        <!-- <script src="https://www.google.com/recaptcha/api.js?render=_reCAPTCHA_site_key"></script> -->
    </head>
    <body>
        <!-- layout ini -->
        <header>
            <div class="wrap">
                <div class="headerLeft">
                    <img src="/images/logo_light_4.png" alt="Logo Light"/>
                </div>
                <div class="headerRight">
                    <div class="title">
                        <span>PLANO DE AÇÃO</span>
                    </div>
                </div>
            </div>
        </header>
        <div class="alerts">
            <div class="wrap">
                <div class="notification">
                    <span class="msgWarning"></span>
                </div>
            </div>
        </div>
        <div id="modals">
            <div class="wrap" id="targetModals">
                
            </div>
        </div>
        <!-- layout fim -->
        <div id="content">
            <div class="wrap">
                <div class="sideLeft">
                    <div class="logo">
                        <img src="/images/handshake.svg" />
                    </div>
                    <hr/>
                    <div class="desc">
                        <p>SISTEMA DE AVALIAÇÃO</p>
                        <p>DE FORNECEDOR</p>
                    </div>
                </div>
                <div class="sideRight">
                    <div class="formTitle">
                        <span>ESQUECI MINHA SENHA</span>
                    </div>
                    <div class="formLogin">
                        <div class="mark">
                            <span>INFORME O SEU E-MAIL/LOGIN</span>
                        </div>
                        <div class="divForm">
                            <input type="text" id="txtLogin" />
                            <img src="/images/icon_login_silver.svg" />
                        </div>
                    </div>
                    <div class="btn">
                        <div id="btnEnviar" class="oButton primary">ENVIAR</div>
                    </div>
                    <footer>
                        <div class="wrap">
                            <div class="others">
                                <a href="/login.html">
                                    <img src="/images/btnBack.svg" />
                                </a>
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </body>
</html>